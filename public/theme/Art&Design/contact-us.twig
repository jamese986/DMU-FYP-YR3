{{ include ('partials/_header.twig') }}
{{ include ('partials/_nav.twig') }}
<main class="mdl-layout__content">
<div class="mdl-grid portfolio-max-width">
  <div class="mdl-cell mdl-cell--12-col mdl-card mdl-shadow--4dp">
    <div class="mdl-card__media">
      <img class="article-image" src=" {{ record.image|image() }}" border="0" alt="">
    </div>
    <div class="mdl-grid portfolio-copy">
      <h3 class="mdl-cell mdl-cell--12-col mdl-typography--headline">{{ record.title }}</h3>
      <div class="mdl-cell mdl-cell--12-col mdl-card__supporting-text no-padding ">
        <p>
          {{ record.body}}
        </p>
      </div>
    </div>
  </div>
  <div class="mdl-cell mdl-cell--12-col mdl-card mdl-shadow--4dp">
    <div class="mdl-grid portfolio-copy">
      {{ boltforms('contact') }}
    </div>
  </div>
</div>
</main>