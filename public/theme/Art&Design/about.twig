{{ include ('partials/_header.twig') }}
{{ include ('partials/_nav.twig') }}
<main class="mdl-layout__content">
<div class="mdl-grid portfolio-max-width">
  <div class="mdl-cell mdl-cell--12-col mdl-card mdl-shadow--4dp">
    <div class="mdl-card__media">
      <img class="article-image" src=" {{ record.image|image() }}" border="0" alt="">
    </div>
    <div class="mdl-grid portfolio-copy">
      <h3 class="mdl-cell mdl-cell--12-col mdl-typography--headline">{{ record.title }}</h3>
      <div class="mdl-cell mdl-cell--12-col mdl-card__supporting-text no-padding ">
        <p>
          {{ record.body}}
        </p>
      </div>
    </div>
  </div>
  <div class="mdl-cell mdl-cell--12-col mdl-card mdl-shadow--4dp">
    <div class="mdl-grid portfolio-copy">
      {{ include ('partials/_tabs.twig') }}
    </div>
  </div>

  <div class="demo-card-event mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-card mdl-card mdl-shadow--4dp portfolio-blog-card-event-bg mdl-color-text--white">
    <div class="mdl-card__title mdl-card--expand">
      <h4 class="mdl-color-text--white">
        Conference event:<br>
        May 24, 2016<br>
        7-11pm
      </h4>
    </div>
    <div class="mdl-card__actions mdl-card--border">
      <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-color-text--white" href="https://eventbookings.dmu.ac.uk/EventBookingWithFilter.aspx?eventFilter=University+Open+Day">Add to Calendar</a>
      <div class="mdl-layout-spacer"></div>
      <i class="material-icons ">event</i>
    </div>
  </div>
  <div class="mdl-cell mdl-cell--12-col mdl-card mdl-shadow--4dp">
    
    <iframe width="1280" height="520" src="https://www.youtube-nocookie.com/embed/5JNqKIxuCRI" frameborder="0" allow="encrypted-media" allowfullscreen></iframe>
    </div>
  </div>

{{ include ('partials/_footer.twig') }}